<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER"
      spacing="20"
      fx:controller="ru.kpfu.itis.jackal.ui.controller.MainController">

    <Label text="Шакал - Pirates Game" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
    <Button text="Подключиться к игре" onAction="#connectToGame"/>
    <Button text="Выход" onAction="#exitGame"/>

</VBox>